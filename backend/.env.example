# Project JobHunter - Environment Variables
# Copy this file to .env and fill in your values

# Groq API Key (FREE - get from https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Supabase (Required for user data)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# OpenAI API Key (for GPT-4o Vision)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database
DATABASE_URL=postgresql://jobhunter:jobhunter@localhost:5432/jobhunter

# Redis
REDIS_URL=redis://localhost:6379/0

# ChromaDB persistence path
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Embedding model (FREE - runs locally via HuggingFace)
# Options: all-MiniLM-L6-v2 (fast, 80MB), all-mpnet-base-v2 (better quality, 420MB)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Models (Groq FREE tier)
# Complex: llama-3.3-70b-versatile, mixtral-8x7b-32768
# Simple: llama-3.1-8b-instant, gemma2-9b-it
LLM_MODEL_COMPLEX=llama-3.3-70b-versatile
LLM_MODEL_SIMPLE=llama-3.1-8b-instant

# Debug mode
DEBUG=false

