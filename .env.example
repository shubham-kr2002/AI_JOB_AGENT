# =============================================================================
# Project JobHunter V3 - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL (Long-Term Memory & World Model)
# -----------------------------------------------------------------------------
POSTGRES_USER=jobhunter
POSTGRES_PASSWORD=jobhunter_secret
POSTGRES_DB=jobhunter_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# SQLAlchemy connection string
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Redis (Task Queue & Short-Term Memory)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Celery broker/backend URLs
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/1

# -----------------------------------------------------------------------------
# Qdrant (Vector Memory - Semantic Recall)
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_URL=http://${QDRANT_HOST}:${QDRANT_PORT}

# -----------------------------------------------------------------------------
# AI Models - LLM Providers
# -----------------------------------------------------------------------------
# Groq API (Free tier - Fast inference for Llama 3)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI (Reasoning model - GPT-4o)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Alternative reasoning - Claude 3.5)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model selection
LLM_MODEL_FAST=llama-3.1-8b-instant
LLM_MODEL_REASONING=llama-3.3-70b-versatile
LLM_MODEL_VISION=gpt-4o

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=JobHunter
APP_ENV=development
DEBUG=true
SECRET_KEY=your_secret_key_change_in_production

# API Settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,chrome-extension://*

# -----------------------------------------------------------------------------
# Playwright (Browser Automation)
# -----------------------------------------------------------------------------
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# -----------------------------------------------------------------------------
# Rate Limiting & Cost Management
# -----------------------------------------------------------------------------
MAX_TOKENS_PER_USER_MONTHLY=100000
MAX_APPLICATIONS_PER_HOUR=20
